#:import la adapters.searcher_adapter.SearcherAdapter
#:import lb adapters.searcher_adapter.SearcherAdapterButton

<ListItemButton>
    size_hint_y: None
    height: "40dp"
    on_release: root.on_menu_selection(self.index)
</ListItemButton>

<MainWidget>
    orientation: "vertical"

    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: torrent_query
            size_hint_x: 75
            text: "Homeland"
            focus: True
        Button:
            id: torrent_search
            text: "Search"
            size_hint_x: 25
            on_press: root.do_search(root.ids.torrent_query.text)

    ListView:
        id: search_result_list
        adapter: la(data=[], cls=lb)
        item_strings: []

    Button:
        text: "Hello, World"
        on_press: app.interface_manager.switch_form('video_player')
        height: "40dp"
        size_hint_y: None
</MainWidget>
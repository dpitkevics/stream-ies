<MainWidget>
    orientation: "vertical"

    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: torrent_query
            size_hint_x: 75
            text: "Homeland"
            focus: True
        Button:
            id: torrent_search
            text: "Search"
            size_hint_x: 25
            on_press: root.do_search(root.ids.torrent_query.text)

    ListView:
        id: search_result_list

    Button:
        text: "Hello, World"
        on_press: app.interface_manager.switch_form('video_player')
        height: "40dp"
        size_hint_y: None
</MainWidget>